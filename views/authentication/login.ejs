<!-- 首尾嵌入自製的ejs模板 -->
<%- include('../partials/header.ejs'); %>
	<div class="container">
		<div class="row justify-content-center">

			<form action="/login" method="post" class="col-md-6 text-center d-inline-block">
				<h1>
					Login
				</h1>
				<div class="form-group mb-0">
					<input name="username" class="form-control mb-2" type="text" placeholder="User Name">
					
					<input name="password" class="form-control mb-2" type="password" placeholder="Password">
					
				</div>
				<div>
					<button type="submit" class="btn btn-outline-primary">
							Submit
					</button>
					<button type="reset" class="btn btn-outline-secondary">
							Reset
					</button>
				</div>
				
			</form>
			
			
		</div>
		<div class="row justify-content-center">
			<a href="/" class="col-md-6">Go Back</a>
		</div>
	</div>
<%- include('../partials/footer.ejs'); %>