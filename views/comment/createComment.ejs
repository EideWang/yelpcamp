<!-- 首尾嵌入自製的ejs模板 -->
<%- include('../partials/header.ejs'); %>
	<div class="container">
		<div class="row justify-content-center">
			<h1>
				Add New Comment to <%= campground.name%>.
			</h1>
			<form action="/campgrounds/<%=campground._id%>/comments" method="post" class="col-md-6 text-center d-inline-block">
				<div class="form-group mb-0">
					<!-- 改成抓登入的username -->
					<!-- <input name="comment[author]" class="form-control mb-2" type="text" placeholder="Your Name"> -->
					
					<textarea name="comment[text]" class="form-control mb-2" type="text" placeholder="Comment..." rows="4"></textarea>
					
				</div>
				<div>
					<button type="submit" class="btn btn-outline-primary">
							Submit
					</button>
					<button type="reset" class="btn btn-outline-secondary">
							Reset
					</button>
				</div>
				
			</form>
			
			
		</div>
		<div class="row justify-content-center">
			<a href="/campgrounds/<%=campground._id%>" class="col-md-6">Go Back</a>
		</div>
	</div>
<%- include('../partials/footer.ejs'); %>